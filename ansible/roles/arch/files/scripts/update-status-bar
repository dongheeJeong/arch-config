#!/bin/sh

network="$(nmcli -g STATE,CONNECTION device status | grep "connected:" | cut -d: -f2)"
if [ -z "$network" ]; then
  network="X"
fi

partitions="$(df -h | grep -e "^/dev/" | awk '{ printf("%s  %s / %s (%s)\n", $1, $3, $2, $5) }')"

sound_vol="$(awk -F"[][]" '/Left:/ { print $2 }' <(amixer sget Master))"
date="$(date '+%Y-%m-%d  %H:%M:%S (%a)')"


partition_status=""
IFS=$'\n'
for partition in $partitions; do
  partition_status+="|  $partition  "
done

#
# battery
#
battery=""
battery_path="/sys/class/power_supply/BAT0"
if [ -d  "$battery_path" ]; then
  capacity="$(cat $battery_path/capacity)"
  battery+="$capacity%"

  if [ "$(cat $battery_path/status)" == "Charging" ]; then
    battery+=" (ðŸ”Œ)"
  fi
else
  battery+="X"
fi

xsetroot -name "$partition_status|  ðŸ“¶ $network  |  ðŸ”Š $sound_vol  |  ðŸ”‹ $battery  |  $date  "

