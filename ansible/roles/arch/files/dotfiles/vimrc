" Syuntax highlighting
filetype plugin on
syntax on


" etc
set laststatus=2
set statusline+=%F
set number
set relativenumber
set hlsearch
set shiftwidth=2


" command alias
command W w
command Wq wq
command Q q


colorscheme darkblue


" highlight trailing white space
highlight ExtraWhitespace ctermbg=red guibg=red
match ExtraWhitespace /\s\+$/


" indent
filetype indent on


